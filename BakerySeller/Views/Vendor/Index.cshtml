<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Pierre's Bake Shop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
    @using BakerySeller.Models
    <h1>Available Vendors:</h1>
    @foreach (Vendor vendor in Model) {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <a href="/vendor/@vendor.Id"><h5 class="card-title">@vendor.Name</h5></a>
                <p class="card-text">@vendor.Description</p>
            </div>
        </div>
    }

    <a href='/vendors/new'>Add a New Vendor</a>
    <br>
</body>

</html>